{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "src/js",
    "baseUrl": "src/ts",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["./src/ts"]
  /* "exclude": ["node_modules", "src/js", "docs"] */
}
